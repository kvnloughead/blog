<ul>
  {% for post in collections.post | reverse %}
    <li>
      <div>
        {% for tag in post.data.tags %}
          {%- if collections.postTags.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a
              href="{{ tagUrl | url }}">#{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
        <time
          datetime="{{ post.date }}">
          {{ post.date | readableDate }}
        </time>
      </div>
      <a
        href="{{ post.url }}">{{ post.data.title }}</a>
    </li>
  {% endfor %}
</ul>