{# If `tags` isn't declared in parent document, #}
{# render all tags and align left #}
{% set filtered = tags.length > 0 %} 
{% set tags = tags or collections.postTags %}

<ul
  class="tags {{ ' tags_align_left' if filtered }}">
  {% for tag in tags %}
    {% set tagUrl %}/tags/{{ tag | tagToSlug }}/{% endset %}
    <li
      class="tags__item tags__item_place_blog">
      <a
        class="tags__link"
        href="{{ tagUrl | url }}">{{ tag }}</a>
    </li>
  {% endfor %}
</ul>